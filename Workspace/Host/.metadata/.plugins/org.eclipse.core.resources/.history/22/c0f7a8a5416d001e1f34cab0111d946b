#include <stdint.h>
#include <stdio.h>

struct dataSet{			// total size should be 8 bytes

	char	data1;		// 1 byte
	int		data2;		// 4 bytes
	char	data3;		// 1 byte
	short	data4;		// 2 bytes
};

int main (void){

	struct dataSet data;

	data.data1 = 0x11;
	data.data2 = 0xFFFFEEEE;
	data.data3 = 0x22;
	data.data4 = 0xABCD;

	uint32_t totalSize = sizeof(struct dataSet);

	uint8_t *ptr = (uint8_t*)&data;

	//To access element:
	printf("MEMORY ADDRESS                   CONTENT\n");
	printf("========================================\n");

	for(uint32_t i = 0; i < totalSize; i++){

		printf("%p                               %X\n", ptr, *ptr);
		ptr++;
	}

	printf("\nTotal Size = %d\n", totalSize);

	return 0;
}

