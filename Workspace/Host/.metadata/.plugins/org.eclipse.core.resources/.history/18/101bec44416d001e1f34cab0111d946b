#include <stdint.h>
#include <stdio.h>

struct dataSet{			// total size should be 8 bytes

	char	data1;		// 1 byte
	int		data2;		// 4 bytes
	char	data3;		// 1 byte
	short	data4;		// 2 bytes
};

int main (void){

	struct dataSet data;

	data.data1 = 0x11;
	data.data2 = 0xFFFFEEEE;
	data.data3 = 0x22;
	data.data4 = 0xABCD;

	//To access element:
	printf("MEMORY ADDRESS                   ADDRESS\n");
	printf("========================================\n");
	printf("carNumber:   %d\n", carBMW.carNumber);
	printf("carPrice:    %d\n", carBMW.carPrice);
	printf("carMaxSpeed: %d\n", carBMW.carMaxSpeed);
	printf("carWeight:   %.2f\n", carBMW.carWeight);

	return 0;
}

