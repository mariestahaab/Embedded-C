#include <stdio.h>

int main(void){
	int numberOfInputs = 0;
	char input;

	while(numberOfInputs < 6){

		printf("\nEnter a character: ");
		input = getchar();

		while(getchar() != '\n');

		printf("Entered character: %c\n", input);
		//putchar((int)input);

		numberOfInputs++;
	}

	return 0;
}
