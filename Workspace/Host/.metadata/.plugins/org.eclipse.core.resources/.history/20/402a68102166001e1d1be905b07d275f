#include <stdio.h>

int main(void){
	int a, b, c, sum;
	float average;

	printf("\nEnter A: ");
	scanf("%d", &a);

	printf("\nEnter B: ");
	scanf("%d", &b);

	printf("\nEnter C: ");
	scanf("%d", &c);

	sum = a+b+c;
	printf("\nSum = %d", sum);

	average = (float)sum / 3;
	printf("\nAverage = %.2f", average);

	return 0;
}
