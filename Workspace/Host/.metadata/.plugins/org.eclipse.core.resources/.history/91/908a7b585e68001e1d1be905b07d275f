#include <stdio.h>
#include <stdint.h>
#include <stdbool.h>

bool checkEven(){

	printf("\nEnter a number: ");
	scanf("%d", &input);

	if(input % 2 == 0){
		printf("%d is an even number.\n", input);
	}
	else{
		printf("%d is an odd number.\n", input);
	}

	return false;
}

int main(void){

	checkEven();

	getchar();

	return 0;
}
