#include <stdio.h>

int main(void){
	int numberOfInputs = 0;
	char input;

	while(numberOfInputs < 6){

		printf("\nEnter a character: ");
		//fflush(stdout);

		input = getchar();

		printf("\nEntered character: ");
		//fflush(stdout);

		putchar((int)input);

		numberOfInputs++;
	}

	getchar();

	return 0;
}
