#include <stdio.h>
#include <stdint.h>

int main(void){

	int32_t number = 0;
	printf("Enter an Number: ");
	scanf("%d", &number);

	if(number == 0){
		printf("Number is 0.\n");
	}else{
		if(number & 0x01){
			printf("Number is ODD.\n");
		}else{
			printf("Number is EVEN.\n");
		}
	}
	return 0;
}
