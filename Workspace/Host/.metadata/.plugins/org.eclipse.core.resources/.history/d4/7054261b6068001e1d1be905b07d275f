#include <stdio.h>
#include <stdint.h>
#include <stdbool.h>

bool checkEven(){
	int32_t input;

	printf("\nEnter a number: ");
	scanf("%d", &input);

	if(input % 2 == 0){
		printf("%d is an EVEN number.\n", input);
	}
	else{
		printf("%d is an ODD number.\n", input);
	}

	return true;
}

int main(void){

	while(checkEven())
		;

	getchar();

	return 0;
}
