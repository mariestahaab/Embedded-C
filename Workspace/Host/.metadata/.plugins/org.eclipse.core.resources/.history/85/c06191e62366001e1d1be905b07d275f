 */

#include <stdio.h>

int main(void){
	float a, b, c, sum, average;

	printf("Enter A: ");
	fflush(stdout);
	scanf("%f", &a);

	printf("Enter B: ");
	fflush(stdout);
	scanf("%d", &b);

	printf("Enter C: ");
	fflush(stdout);
	scanf("%d", &c);

	sum = a+b+c;
	printf("\nSum = %f", sum);
	fflush(stdout);

	average = sum / 3;
	printf("\nAverage = %.5f", average);
	fflush(stdout);

	getchar();

	return 0;
}
